<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="200dp"
	android:layout_height="300dp"
	xmlns:tools="http://schemas.android.com/tools">

	<ImageView
		android:id="@+id/product_picture"
		android:layout_width="100dp"
		android:layout_height="200dp"
		android:src="@drawable/product_name_picture"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginTop="@dimen/start_page_elements_start_margin"/>

	<TextView
		android:id="@+id/product_price"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:textColor="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/product_picture"
		android:layout_marginTop="@dimen/start_page_elements_start_margin"
		tools:text="181 ₽/шт." />

	<TextView
		android:id="@+id/product_description"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:maxLines="2"
		android:textColor="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/product_price"
		tools:text="Плита гипсовая пазогребневая пустотелая 667x500x80 мм" />

</androidx.constraintlayout.widget.ConstraintLayout>